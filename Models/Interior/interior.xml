<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>intporte</object-name>
    <object-name>periscope</object-name>
    <object-name>mirroir</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Ryan-SoSL/Models/Effects/Glass/glass</inherits-from>
    <object-name>verriere</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.896 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.108 </z-m>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.256 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.446 </z-m>
    </offsets>
  </model>

  <!-- Door -->
  <animation>
    <name>IntEnsemblePorte</name>
    <object-name>intporte</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntEnsemblePorte</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 75 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.521 </y-m>
      <z-m>  0.078 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
