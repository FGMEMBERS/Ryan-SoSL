<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>attitude.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>attaches</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Ryan-SoSL/Models/Effects/Glass/glass</inherits-from>
    <object-name>verriere</object-name>
  </effect>
  
  <!--   ClinomÃ¨tre  -->
  <animation>
    <type>scale</type>
    <object-name>needle1</object-name>
    <property>orientation/pitch-deg</property>
    <min> -30 </min>
    <max>  30 </max>
    <interpolation>
      <entry><ind> -30 </ind><dep> 0.2 </dep></entry>
      <entry><ind>  30 </ind><dep> 1.8 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00919 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.13990 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>needle3</object-name>
    <property>orientation/roll-deg</property>
    <min> -15 </min>
    <max>  15 </max>
    <interpolation>
      <entry><ind> -15 </ind><dep> -15 </dep></entry>
      <entry><ind>  15 </ind><dep>  15 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.0 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -0.2 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
