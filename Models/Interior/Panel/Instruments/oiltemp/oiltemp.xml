<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>oiltemp.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Ryan-SoSL/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine/oil-temperature-degf[0]</property>
    <min>86</min>
    <max>300</max> 
    <interpolation>
      <entry><ind>  86 </ind><dep>   0 </dep></entry>
      <entry><ind> 300 </ind><dep> 270 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
