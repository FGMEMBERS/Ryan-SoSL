<?xml version="1.0"?>

<PropertyList>

  <path>ryan-sosl.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name> 
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>suspensionG</object-name>
    <object-name>suspensionD</object-name>
    <object-name>cadreG</object-name>
    <object-name>cadreD</object-name>
    <object-name>aile</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>axes</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axe2G</object-name>
    <object-name>axe2D</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>pilote</object-name>
    <object-name>porte</object-name>
    <object-name>periscope</object-name>
    <object-name>patte</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>pilote</object-name>
    <condition>
      <greater-than>
        <property>/sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.256 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.446 </z-m>
      <pitch-deg> 0.000 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>900</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>300.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>900.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
	<value>900</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -4.010 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.114 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.364 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.534 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m> 3.465 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.547 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Les ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m> -1.026 </x-m>
      <y-m> -5.014 </y-m>
      <z-m>  0.822 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m> -1.026 </x-m>
      <y-m>  5.014 </y-m>
      <z-m>  0.822 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>rotate</type>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <object-name>axe2G</object-name>
    <object-name>cacheG</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> 14.0 </dep>
      </entry>
      <entry>
        <ind> 0.300 </ind>
        <dep> 0.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.258 </x-m>
      <y-m> -0.538 </y-m>
      <z-m> -0.510 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>suspensionG</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 5.0 </dep>
      </entry>
      <entry>
        <ind> 0.300 </ind>
        <dep> 0.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.245 </x-m>
      <y-m> -1.306 </y-m>
      <z-m> -0.181 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <object-name>axe2D</object-name>
    <object-name>cacheD</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>   0.0 </ind>
        <dep> -14.0 </dep>
      </entry>
      <entry>
        <ind> 0.300 </ind>
        <dep> 0.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.258 </x-m>
      <y-m>  0.538 </y-m>
      <z-m> -0.510 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>suspensionD</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>  0.0 </ind>
        <dep> -5.0 </dep>
      </entry>
      <entry>
        <ind> 0.300 </ind>
        <dep> 0.000 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.000 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -2.245 </x-m>
      <y-m>  1.306 </y-m>
      <z-m> -0.181 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.326 </x-m>
      <y-m> -1.541 </y-m>
      <z-m> -0.893 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.326 </x-m>
      <y-m> -1.541 </y-m>
      <z-m> -0.893 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Door -->
  <animation>
    <type>rotate</type>
    <object-name>porte</object-name>
    <object-name>cadreD</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor>75</factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.521 </y-m>
      <z-m>  0.078 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

</PropertyList>

