<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>ryan-sosl.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Ryan-SoSL/Models/Liveries", 10);

      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);
      
      var crew_door = self.getNode("instrumentation/doors/crew/position-norm", 1);
      var passenger_door = self.getNode("instrumentation/doors/passenger/position-norm", 1);
    
      crew_door.alias(float_0);
      passenger_door.alias(float_1);
    </load>

    <unload>
      livery_update.stop();
      crew_door.unalias();
      passenger_door.unalias();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>nez</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>

    <object-name>fuselage</object-name>
    <object-name>suspensionG</object-name>
    <object-name>suspensionD</object-name>
    <object-name>cadreG</object-name>
    <object-name>cadreD</object-name>
    <object-name>aile</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>axes</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axe2G</object-name>
    <object-name>axe2D</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>porte</object-name>
    <object-name>trous</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name> 
    <object-name>patte</object-name>

    <!-- Objets transparents -->
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>nez</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>

    <object-name>fuselage</object-name>
    <object-name>suspensionG</object-name>
    <object-name>suspensionD</object-name>
    <object-name>cadreG</object-name>
    <object-name>cadreD</object-name>
    <object-name>aile</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>axes</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axe2G</object-name>
    <object-name>axe2D</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>cacheG</object-name>
    <object-name>cacheD</object-name>
    <object-name>porte</object-name>
    <object-name>trous</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name> 
    <object-name>patte</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <effect>
    <inherits-from>Aircraft/Generic/Effects/Fuselagereflect</inherits-from>
    <object-name>nez</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>verriere</object-name>
  </animation>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant Rembrandt -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/shadow.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.800 </z-m>
    </offsets>
  </model>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Interior/interior.xml</path>
  </model>

  <!-- Engine -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Engine/whirlwind.xml</path>
    <offsets>
      <x-m> -3.551 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.114 </z-m>
    </offsets>
  </model>

  <!-- Cranking -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Effects/cranking/all-cranking.xml</path>
  </model>

  <!-- Effets sur le sol -->
  <!-- Roue gauche -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -2.326 </x-m>
      <y-m> -1.541 </y-m>
      <z-m> -1.277 </z-m>
    </offsets>
  </model>

  <!-- Roue droite -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -2.326 </x-m>
      <y-m>  1.541 </y-m>
      <z-m> -1.277 </z-m>
    </offsets>
  </model>

  <!-- Patte de queue -->
  <model>
    <path>Aircraft/Ryan-SoSL/Models/Effects/ground/ground2.xml</path>
    <offsets>
      <x-m>  2.965 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.225 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value> 900 </value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value> 300.000 </value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value> 900.001 </value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value> 900 </value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -4.010 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.114 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>11</factor>
    <center>
      <x-m> 3.385 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.534 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <axis>
      <x1-m> 3.495 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.130 </z1-m>
      <x2-m> 3.483 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 1.187 </z2-m>
    </axis>
  </animation>

  <!-- Les ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> -0.962 </x-m>
      <y-m> -5.014 </y-m>
      <z-m>  0.816 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> -0.962 </x-m>
      <y-m>  5.014 </y-m>
      <z-m>  0.816 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <name>EnsembleGauche</name>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <object-name>axe2G</object-name>
    <object-name>cacheG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>EnsembleGauche</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 14 </dep></entry>
      <entry><ind> 0.3 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.258 </x-m>
      <y-m> -0.538 </y-m>
      <z-m> -0.510 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>suspensionG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 5 </dep></entry>
      <entry><ind> 0.3 </ind><dep> 0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.245 </x-m>
      <y-m> -1.306 </y-m>
      <z-m> -0.181 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>EnsembleDroit</name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <object-name>axe2D</object-name>
    <object-name>cacheD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>EnsembleDroit</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -14 </dep></entry>
      <entry><ind> 0.3 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep>   0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.258 </x-m>
      <y-m>  0.538 </y-m>
      <z-m> -0.510 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>suspensionD</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -5 </dep></entry>
      <entry><ind> 0.3 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  0 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.245 </x-m>
      <y-m>  1.306 </y-m>
      <z-m> -0.181 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.326 </x-m>
      <y-m> -1.541 </y-m>
      <z-m> -0.893 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.326 </x-m>
      <y-m> -1.541 </y-m>
      <z-m> -0.893 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Door -->
  <animation>
    <name>EnsemblePorte</name>
    <object-name>porte</object-name>
    <object-name>cadreD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>EnsemblePorte</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 75 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.521 </y-m>
      <z-m>  0.078 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>

